<div class="col-lg-12">
    <h2 class="text-center text-success">TSBMONGO</h2>
    <div class="col-lg-4 col-lg-offset-4">
        {{#if message}}<h4 class="text-danger text-center">{{message}}</h4>{{/if}}
        <form class="form-signin" method="post" action="{{app_context}}/app/login_action">
            <select class="form-control" id="inputDB" name="inputDB">
                {{#each dbList}}
                   <option>{{this}}</option>
                {{/each}}
            </select>
            <br/>
            <input type="text" id="inputUser" name="inputUser" class="form-control" placeholder="{{__ "DB User"}}"" required>
            <br/>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="{{__ "DB Password"}}"" required>
            <br/>
            <button class="btn btn-lg btn-primary btn-block" type="submit">{{__ "Sign in"}}</button>
            <br/>
            <label for="inputPassword" class="sr-only">{{__ "Password"}}</label>
        </form>
    </div>
</div>